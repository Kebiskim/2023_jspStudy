<script type="text/javascript">
	function submit_scores(f) {
		// form 태그의 요소 길이만큼
		for (var i = 0; i < f.elements.length; i++) {
			if(f.elements[i].value == ""){
				// 아래 코드가 바로 유효성 검사!!
				alert(f.elements[i].name+"을 입력하세요.");
				f.elements[i].focus();
				return;
			}
		}
		
	/* 	var name = f.name.value;
		var kor = f.kor.value;
		var eng = f.eng.value;
		var math = f.math.value;
		if (name == ''){
			alert("이름을 입력하세요.");
			f.name.focus;
			return;
		}
		if (kor == ''){
			alert("국어 성적을 입력하세요.");
			f.kor.focus;
			return;
		}
		if (eng == ''){
			alert("영어 성적을 입력하세요.");
			f.eng.focus;
			return;
		}
		if (math == ''){
			alert("수학 성적을 입력하세요.");
			f.math.focus;
			return;
		} */
		
		f.action = "/01_servlet/Ex08";
		f.submit();
	}
</script>
