<script type="text/javascript">
	function send_go(f){
		// 자바스크립트를 사용할 때 required가 실행되지 않는다.
		// form에 action이 있으면 생략하고, 없으면 별도로 코딩해야 한다.
		f.action = "01_servlet/Ex07";
		f.submit();
	}
</script>
